<!-- html to show designs if artist is isLoggedIn -->

<!doctype html>
<html>
<head>
  <title>Tinta</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h2>Designs</h2>
  <p><a href="/logout">logout</a></p>

  <div class="well">
  <img src="img/hennessy.jpeg" class="profilePic" alt="">
  <h3>Local</h3>
  <% if (user.local.email) { %>
  <p>
  <strong>id</strong>: <%= user._id %><br>
  <strong>username</strong>: <%= user.local.email %><br>
  </p>
  <% } %>
  </div>
  <p><a href="/signup">public profile</a></p>

  <form class="" action="/upload/photo" method="post" enctype="multipart/form-data">
      <input type="file" name="picture">
      <button type="submit" name="button">Submit</button>
  </form>


  <div class="grid-container">
    <!-- displays each object in db 'designs' -->
    <% for(let i = 0; i < designs.length; i++) {%>
      <!-- <a href="/camera"> --><!-- </a> -->
      <div data-source="<%= designs[i].image %>" class="grid-item arObject">


        <a href="/design/<%= designs[i]._id %>">
          View Image
        </a>
        <img class="src" src="data:image/png;base64,<%= designs[i].image %>" alt="">
        <time><%= designs[i].dateCreated %></time>

      </div>
      <%}%>
      <div class="grid-item">2</div>
      <div class="grid-item">3</div>
    </div>
    <script type="text/javascript" src="main.js"></script>
  </body>
  </html>
